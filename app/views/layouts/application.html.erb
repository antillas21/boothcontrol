<!DOCTYPE html>
<html>
<head>
  <title>Boothcontrol</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  	<div id="alerts" class="container_12">
		<div id="flash" class="grid_12">
			<% flash.each do |key, value| %>
			    <div class="alert-message block-message <%= key == :notice ? 'success' : key %> fade in" data-alert="alert">
						<a href="#" class="close">x</a>
						<%= value %>
					</div>
			<% end %>
		</div>
	</div>
	<div id="app-content" class="container_12">
		<%= yield %>
	</div>
</body>
</html>
